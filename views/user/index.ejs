      <script>
        $( document ).ready(function(){
          $(".button-collapse").sideNav();
          $('.parallax').parallax();
        });

        function more(project, i, length){
          $('#moreinfo').remove();
          var row;
          var offset;
          if ( (i+1) % 3 == 0 ){
            row = i + 1;
            offset = 10;
          }
          else {
            row = Math.min(length,((i+1) + (3 - ((i+1) % 3))));
            if (3 - (i+1) % 3 == 1){ offset = 6; }
            else { offset = 2; }
          }



          $.ajax({
            type:"GET",
            url:'/get_project_information/',
            data: "id="+project,
            success: function(data){
              var mainPhoto;
              var miniPhoto = ''
              for (var i = 0; i < data.length; i++){
                if (data[i].type == "main"){
                  mainPhoto = data[i].image_name;
                } else {
                  miniPhoto += '<div class="col l3 s3 m3">  <img src="images/uploaded_files/'+data[i].mini_name+'" class="responsive-img"> </div>'
                }
              }
              miniPhoto += '</div>';
              $("#"+row).after( '<div class="col s12 '+ row +'" id="moreinfo" style="clear: both; height: 750px;"> ' +
								  '<div class="col s12 offset-l'+offset+' offset-m'+offset+' triangle"> </div>  ' +
								  '<div id="infoDiv" style="position: absolute; left: 0; right: 0px;"> ' +
									'<div id="infomainimg"> ' +
										'<div class="infoname">11111</div>'+
										'<div class="col l9 s9 m9"><img id="img_test" src="images/uploaded_files/'+mainPhoto+'" class="responsive-img"></div>'+
										+ miniPhoto +
									'</div> ' +
								  '</div> ' +
								'</div>');
              $( "#img_test" ).load(function() {
                var height = $("#infoDiv").height(); $("#moreinfo").css("height", height + "px");
              });
            }
          });
        }

        window.onscroll = function(){
          var height = $(window).height();
          if (height < $(window).scrollTop()){
            $('nav').css('position','fixed');
            $('nav').css('background', 'rgba(255,255,255,1)');
            $('nav ul li a ').css('color', 'black');
            $('nav ul li a:hover, nav ul li a.activeCustom').css('border-bottom','transparent');
            $( "nav" ).addClass( "z-depth-1" );
            $( "nav" ).removeClass( "z-depth-0" );
          } else if(height > $(window).scrollTop()) {
            $('nav').css('position','absolute');
            $('nav').css('background', 'transparent');
            $('nav ul li a ').css('color', 'white');
            $( "nav" ).removeClass( "z-depth-1" );
            $( "nav" ).addClass( "z-depth-0" );
          }
        };
        $( window ).resize(function() {
          var height = $("#infoDiv").height();
          $('#moreinfo').css("height", height + 'px');
        });

      </script>
