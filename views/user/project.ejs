            <div class="container">
                <div class="z-depth-1">
                      <div class="search">
                         <i class="material-icons searchIcon white-text">search</i>          
                         <input placeholder="Поиск">
                     </div>
            

                <div class="sort white">
                     <form action="#">
                         <div class="row">
                             <div class="col s6"> 
                                 <span>Площадь:</span>
                                <div id="space" class="col s12 m12 l12">
                                </div>     
                             </div> 


                             <div class="col s6"> 
                                <span>Цена:</span>
                                <div id="price" class="col s12 m12 l12">
                                </div>     
                             </div> 
                         </div>

                         <div class="row padding-top-40">
                              <div class="input-field col s6">
                                <select id="rooms">
                                  <option value="" selected>Любой вариант</option>
                                </select>
                                <label for="rooms">Количество комнат:</label>
                              </div>
                              <div class="input-field col s6">
                                <!--<select multiple class="browser-default js-example-disabled-results" id="mats">
                                  <option value="one">First</option>
                                  <option value="two" disabled="disabled">Second (disabled)</option>
                                  <option value="three">Third</option>
                                </select>!-->
                                  <select name="skills" multiple="" class="ui fluid dropdown">
                                        <option value="">Skills</option>
                                        <option value="angular">Angular</option>
                                        <option value="css">CSS</option>
                                        <option value="design">Graphic Design</option>
                                        <option value="ember">Ember</option>
                                        <option value="html">HTML</option>
                                        <option value="ia">Information Architecture</option>
                                        <option value="javascript">Javascript</option>
                                        <option value="mech">Mechanical Engineering</option>
                                        <option value="meteor">Meteor</option>
                                        <option value="node">NodeJS</option>
                                        <option value="plumbing">Plumbing</option>
                                        <option value="python">Python</option>
                                        <option value="rails">Rails</option>
                                        <option value="react">React</option>
                                        <option value="repair">Kitchen Repair</option>
                                        <option value="ruby">Ruby</option>
                                        <option value="ui">UI Design</option>
                                        <option value="ux">User Experience</option>
                                </select>
                                <!--<label for="mats">Материалы:</label>!-->
                              </div>
                         </div>
                         <div class="col s4">
                            <a class="waves-effect waves-light btn-flat right" onclick="filterSwitch(false)">Отменить</a>
                            <a class="waves-effect waves-light btn-flat right" onclick="filterSwitch(true)">Применить</a>
                         </div>
                        
                    </form>
                </div>
                
                </div>

                 <section id="section">
                        <div id="cards_container" class="row">
                            <% for (var i = 0; i < projects.length; i++) { %>
                            <div id="<%= i + 1 %>" class="col s12 m4 l4">
                                <div id="<%=projects[i].id%>card" class="card waves-light waves-effect waves-block" onclick="moreInfo(<%= projects[i].id %>, <%= i %>, <%= projects.length %>)">
                                    <div class="card-image">
                                        <img src="/images/uploaded_files/<%= projects[i].mini_name %>" class="responsive-img"/>
                                        <span class="card-title"><%= projects[i].name %></span>
                                    </div>
                                    <ul class="card-action-buttons">
                                        <li><a onclick="moreInfo(<%= projects[i].id %>, <%= i %>, <%= projects.length %>)" class="btn-floating waves-effect waves-light brown lighten-2"><i class="material-icons">more_horiz</i></a></li>
                                    </ul>
                                    <div class="card-content">
                                        <% if(projects[i].type == 'design') { %>
                                            <div><b>Площадь: </b> <%= projects[i].space %> </div>
                                            <div><b>Количество комнат: </b> <%= projects[i].number_room %> </div>
                                        <% } else if (projects[i].type == 'projects') { %>
                                            <div><b>Площадь: </b> <%= projects[i].space %> </div>
                                            <div><b>Количество комнат: </b> <%= projects[i].number_room %> </div>
                                            <div><b>Материал изделий: </b> <%= projects[i].material %> </div>
                                        <% } %>
                                        <div><b>Цена: </b> <%= projects[i].price %> руб.</div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                        </div>     
                </section>
            </div>
        </main>    
