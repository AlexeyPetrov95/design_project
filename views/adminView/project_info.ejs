<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script type="text/javascript" src="/js/materialize.min.js"></script>
<script>
    $(document).ready(function(){
        $('ul.tabs').tabs();
        $('.modal-trigger').leanModal();
        $('select').material_select();
    });

    var uploadPhoto = function(project_id, type){
        var files = document.getElementById("photo_chooser").files;
        if (!files) { Materialize.toast('No files', 4000); return; }
        else
        {
            var data = new FormData();

            console.log(files.length);
             for (var i = 0; i < files.length; i++){
                 data.append('uploadFile', files[i]);
                 console.log(data.files);
            }
            console.log(data);
            $.ajax({
                type: "POST",
                url: "/admin/projects/upload_photo/",
                data: data,
                cache: false,
                processData: false,
                contentType: false,
                success: function(data) {
                    var images = "";
                    for (var i = 0; i < files.length; i++){
                        images += "image_format=" + files[i].name.slice(files[i].name.lastIndexOf(".")) + "&image_type_id=" + type + "&project_id="+project_id;
                    }
                   $.ajax({
                        type: "POST",
                        url: "/admin/projects/insert_photo_to_db/",
                        data: "image_format=" + files[0].name.slice(files[0].name.lastIndexOf(".")) + "&image_type_id=" + type + "&project_id="+project_id,
                        success: function (data) {
                            Materialize.toast(files[0].name + " загружен на сервер", 4000);
                            console.log(data);
                        }
                    });
                }
            });
        }
    }
    var loadPhotos = function(project_id){
        $.ajax({
            type: "POST",
            url: "/admin/projects/load_photo/",
            data: "project_id="+project_id,
            success: function(data){

                if (data.files.length == 0) {

                    document.getElementById("main_photo").innerHTML = '<div class="row center"> Фотографии отсутствуют </div>';

                } else {

                    var imgs = '';
                    for (var i = 0; i < data.files.length; i++){
                        imgs += '<div class="row"><div class="col s3 m3 l3"><image width="100%" src="/images/uploaded_files/' + data.files[i].image_name;
                        imgs += '"></image></div><div class="input-field col s6 l6 m6" height="100%"><textarea id="photo' + data.files[i].id;
                        imgs += 'desc" name="photo" class="materialize-textarea active">' + data.files[i].image_description;
                        imgs += '</textarea><label for="photo' + data.files[i].id;
                        imgs += 'desc">Описание фото</label></div><div class="input-field col s3 l3 m3"><select id="image_type' + data.files[i].id + '">';
                        for (var j = 0; j < data.types.length; j++ ) {
                            if (data.types[j].id == data.files[i].type_images_id) {
                                imgs += '<option value="' + data.types[j].id + '">' + data.types[j].type_name + '</option>';
                                break;
                            }
                        }
                        for (var j = 0; j < data.types.length; j++ ) {
                            if (data.types[j].id != data.files[i].type_images_id) {
                                imgs += '<option value="' + data.types[j].id + '">' + data.types[j].type_name + '</option>';
                            }
                        }
                        imgs += '</select><label for="image_type' + data.files[i].id + '">Тип</label>';
                        imgs += '<a onclick="updatePhotoInfo(' + data.files[i].id + ')" class="waves-effect waves-green btn-flat">Изменить</a>';
                        imgs += '<a onclick="deletePhoto(' + data.files[i].id + '); loadPhotos(' + project_id + ');" class="waves-effect waves-red btn-flat">Удалить</a></div></div>';
                    }
                    document.getElementById("main_photo").innerHTML = imgs;
                }
            }
        });
    }
    var updatePhotoInfo = function(photo_id){
        var type = $("#image_type" + photo_id).val();
        var description = $("#photo" + photo_id + "desc").val();

        $.ajax({
            type: "POST",
            url: '/admin/projects/update_photo/',
            data: 'id='+ photo_id +'&type=' + type + '&description=' + description,
            success: function (data) {
                if (!data) {
                    Materialize.toast('Не удалось изменить информацию о фото', 4000);
                } else {
                    Materialize.toast('Информация о фото изменена', 4000);
                }
            }
        });
    }
    var deletePhoto = function(photo_id){
        $.ajax({
            type: "POST",
            url: '/admin/projects/delete_photo/',
            data: 'id='+ photo_id,
            success: function (data) {
                if (!data) {
                    Materialize.toast('Не удалось удалить фото', 4000);
                } else {
                    $('#'+photo_id+'photo').remove();
                    Materialize.toast('Фотография удалена', 4000);
                }
            }
        });
    }
    function replaceProject(id) {
        var material = $("#material").val();
        var description = $("#desc").val();
        var name = $('[name="name"]').val();
        var mark = $('[name="mark"]').val();
        var price = $('[name="price"]').val();
        var space = $('[name="space"]').val();
        var number_room = $('[name="number_room"]').val();

        $.ajax({
            type: "POST",
            url: '/admin/projects/replace_project',
            data: 'id='+ id +'&type=' + type + '&name=' + name + '&mark=' + mark + '&price=' + price + '&space=' + space + '&number_room=' + number_room + '&material=' + material + '&description=' + description,
            success: function (data) {
                if (!data) {
                    Materialize.toast('Не удалось сохранить изменения', 4000);
                } else {
                    Materialize.toast('Изменения сохранены', 4000);
                }
            }
        });
    }

</script>
