            <!-- ВЫГРУЗКА ФОТО !-->
            <ul class="collection" id="main_photo">
                <% for (var i = 0; i < photos.length; i++) { %>
                    <li class="collection-item" id="<%= photos[i].id%>photo">
                        <div class="row padding-top-20">
                            <div class="col s4">
