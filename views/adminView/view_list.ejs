<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel='stylesheet' href='/css/admin/admin.css' />
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>

<%- include ../template/navigation_admin.ejs %>

<body>
<main>
    <!-- таблица проектов !-->
    <div class="container">
        <div class="row">
            <div class="col s12 m12 l12">
                <table class="highlight bordered centered margin-top-30">
                    <thead>
                    <tr>
                        <th data-field="name">Название</th>
                        <th data-field="mark">Маркировка</th>
                        <th>Показать на главной</th>
                    </tr>
                    </thead>

                    <tbody>
                    <% for (var i in projects) { %>

                    <tr id="<%= projects[i].id %>tr">
                        <td><%= projects[i].name %></td>
                        <td><%= projects[i].mark %></td>
                        <td>
                            <p>
                                <input type="checkbox" id="<%= projects[i].id %>check"
                                       onchange="trycheck('<%= i %>', <%= projects[i].id%>);"
                                    <% if (projects[i].selected == 1) {%>
                                        checked="checked"
                                    <% } %>
                                />
                                <label for="<%= projects[i].id %>check"></label>
                            </p>
                        </td>
                    </tr>
                    <%  } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>

<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script type="text/javascript" src="/js/materialize.min.js"></script>
<script>
    var checkedCount = 0;
    var checkedLimit = 6;
    var checkboxes;
    $(document).ready(function(){
        $(".button-collapse").sideNav();
        $('.modal-trigger').leanModal();
        checkboxes = $( "input:checkbox" );
        for (var i in checkboxes) {
            if (checkboxes[i].checked) {
                checkedCount++;
            }
        }
    });
    var trycheck = function(index, id){
        if (checkboxes[index].checked) {
            if (checkedCount >= checkedLimit) {
                checkboxes[index].checked = false;
                Materialize.toast("Больше 6 проектов нельзя", 1000);
            } else { checkedCount++; }
        } else { checkedCount--; }
        $.ajax({
            type:"POST",
            url:'/admin/main_view/update',
            data: "id="+id + '&selected=' + checkboxes[index].checked,
            success: function(data){
                if (data){
                    Materialize.toast('Главная страница обнавлена.', 1000);
                }
            }
        });
    };
</script>
</body>
</html>